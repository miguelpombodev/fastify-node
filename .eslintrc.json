{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": ["standard", "plugin:prettier/recommended"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": [
          "error",
          {
            "printWidth": 80,
            "tabWidth": 2,
            "trailingComma": "all",
            "arrowParens": "always",
            "semi": false
          }
        ]
      }
}